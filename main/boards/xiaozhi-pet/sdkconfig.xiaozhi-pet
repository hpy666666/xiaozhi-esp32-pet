# Xiaozhi Pet Board Configuration
CONFIG_IDF_TARGET="esp32s3"

# Flash size
CONFIG_ESPTOOLPY_FLASHSIZE_16MB=y
CONFIG_ESPTOOLPY_FLASHSIZE="16MB"

# PSRAM
CONFIG_SPIRAM_MODE_OCT=y
CONFIG_SPIRAM=y
CONFIG_SPIRAM_SPEED_80M=y

# CPU frequency
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ_240=y

# Audio settings
CONFIG_AUDIO_INPUT_SAMPLE_RATE=16000
CONFIG_AUDIO_OUTPUT_SAMPLE_RATE=16000

# Display
CONFIG_DISPLAY_TYPE_OLED=y
CONFIG_DISPLAY_WIDTH=128
CONFIG_DISPLAY_HEIGHT=32

# Pet servos enabled
CONFIG_PET_SERVO_ENABLED=y
